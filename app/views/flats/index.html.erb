<div class="container">
  <div class=flat>
    <ul class="list-group">
      <% @flats.each do |flat| %>
        <p class="list-group-item"><%= flat.name %></p>
        <p class="list-group-item"><%= flat.address %></p>
        <p class="list-group-item"><%= flat.description %></p>
        <p class="list-group-item"><%= flat.price_per_night %></p>
        <p class="list-group-item"><%= flat.number_of_guests %></p>
      <% end %>
    </ul>
  </div>
</div>

<button><%= link_to 'Upload a new flat', new_flat_path %></button>
